		First number <input type="text" name="txt1" value="1"> <br> 
		Second number <input type="text" name="txt2" value="4"> <br> 
		Result <input type="text" name="res" value=click(a,b);><br>
		<input type="button" value="Calculate" onclick="calc(a,b,res);">
		<div>onClick = "calc();"</div>
	</form>
	<script type="text/javascript">
	function calc()
	{
		var a = document.forms.txt1.;
		var b = parseInt(document.getElementById("b"));
		var res = a + b;
		alert(res);
	}
	</script>
