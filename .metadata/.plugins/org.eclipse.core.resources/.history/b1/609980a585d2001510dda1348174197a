package mainMethods;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class NumberToWordsBill
{
	public static String numberConvert(long num)
	{
		String res = "";
		boolean sex = false;
		int temp = 0;
		if (num<0)
		{
			res = "минус";
			num*=-1;
		}
		if(num>=1000000000)
		{
			sex = true;
			temp = (int)num/1000000000;
			res += " " + hundred(temp,sex);
			if(temp%10 == 1)
				res += " миллиард";
			
			if (temp%10 == 2 || temp%10 ==3 || temp%10 ==4)
				res += " миллиарда";
			
			else
				res += " миллиардов";
			num -= num/1000000000;
		}
		if(num>=1000000)
		{
			sex = true;
			temp = (int)num/1000000;
			res += " " + hundred(temp,sex);
			num -= num/1000000;
		}
		if(num>=1000)
		{
			temp = (int)num/1000;
			res += " " + hundred(temp,sex);
			num -= num/1000;
		}
		if(num>=0 && num<=999)
		{
			sex = true;		
			res += " " + hundred((int)num,sex);
		}
		return res;
	}
	public static String hundred(int num, boolean sex)
	{
		String word = "";
		if(num >= 100 && num <=999)
		{
			String[] hundr = new String [10];
			hundr[1] = "сто";
			hundr[2] = "двести";
			hundr[3] = "триста";
			hundr[4] = "четыста";
			hundr[5] = "п€тьсот";
			hundr[6] = "шестьсот";
			hundr[7] = "семьсот";
			hundr[8] = "восемьсот";
			hundr[9] = "дев€тьсот";
			word += hundr[num/100];
		}

		if (num%100 < 20)
			word +=" " + one(num%100,sex);

		word +=" " + decade(num%100,sex);

		return word;
	}
	public static String decade(int num,boolean sex)
	{
		String word = "";
		String[] dec = new String[10];
		dec[2] = "двадцать";
		dec[3]= "тридцать";
		dec[4]= "сорок";
		dec[5]="п€тьдес€т";
		dec[6]="шестьдес€т";
		dec[7]="семьдес€т";
		dec[8]="восемьдес€т";
		dec[9]="дев€носто";
		word = dec[num/10];
		if (num%10!=0)
		{
			word+=" " +one(num%10,sex);
		}
		return word;
	}
	public static String one(int num, boolean sex)
	{
		String word = "";
		String[] male = new String[20];
		male[0]="ноль";
		male[1]="один";
		male[2]="два";
		male[3]="три";
		male[4]="четыре";
		male[5]="п€ть";
		male[6]="шесть";
		male[7]="семь";
		male[8]="восемь";
		male[9]="дев€ть";
		male[10]="дес€ть";
		male[11]="одиннадцать";
		male[12]="двенадцать";
		male[13]="тринадцать";
		male[14]="четырнадцать";
		male[15]="п€тнадцать";
		male[16]="шестнадцать";
		male[17]="семнадцать";
		male[18]="восемнадцать";
		male[19]="дев€тнадцать";

		String[] female = new String[4];
		female[0]="ноль";
		female[1]="одна";
		female[2]="две";
		female[3]="три";
		female[4]="четыре";
		female[5]="п€ть";
		female[6]="шесть";
		female[7]="семь";
		female[8]="восемь";
		female[9]="дев€ть";
		female[10]="дес€ть";
		female[11]="одиннадцать";
		female[12]="двенадцать";
		female[13]="тринадцать";
		female[14]="четырнадцать";
		female[15]="п€тнадцать";
		female[16]="шестнадцать";
		female[17]="семнадцать";
		female[18]="восемнадцать";
		female[19]="дев€тнадцать";

		if(sex)
			word = male[num];

		else 
			word = female[num];

		return word;
	}
	private static long inputNum()
	{	
		long num = -1;
		try(Scanner in =new Scanner(JOptionPane.showInputDialog("Input number 0-999,999,999")))
		{
			num = in.nextLong();
		}
		return num;
	}
	public static void main(String[] args)
	{
		long in = -1;
		String res;
		try
		{
			in = inputNum();
		}
		catch(IllegalArgumentException e)
		{
			System.out.println(e.getMessage());
		}
		if(in!=-1) 
		{
			res = numberConvert(in);
			System.out.println(res);
		}
	}
}
