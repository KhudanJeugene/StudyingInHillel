package withMain;

public class Change3Symb
{
	public static void changeSymb(String[] s, int l)
	{

		for (int i=0; i<s.length; i++)
		{			
			if (s[i].length()==l)
			{
				String temp = s[i].substring(0, s[i].length()-3);
				s[i] = temp + "$$$";
			}
		}
	}
	public static void main(String[] args)
	{
		int lenght = 4;
		String[] s ={ "Пока", "ты", "не", "спишь", "ты", "можешь", "идти"};
		changeSymb(s,lenght);
		for(String word :s)
		{
			System.out.print(word + " ");
		}
	}

}
