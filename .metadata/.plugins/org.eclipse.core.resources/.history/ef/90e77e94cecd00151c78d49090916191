<html>
	<head>
		<title>Calculate two number</title>
		<script>
		function calc() 
		{
			var a = parseInt(document.getElementById('a').value);
			var do = document.getElementByld('s').value;
			var b = parseInt(document.getElementById('b').value);
			var c = 0;
			if(do == "+")
				c = a+b;
			
			if(do == "-")
				c = a-b;
			
			if(do == "*")
				c = a*b;
			
			if(do=="/")
				c = a/b;
			document.getElementById('res').value = a+b;
		}
		</script>
	</head>
	<body>
		<form>
			<input id="a" type="text"><p>
			<input id="s" type="text"><p>
			<input id="b" type="text"><p>
			<input id="res" type="text"><p>
			<input type="button" value="Calculate" onclick="calc();"><br>
		</form>
	</body>
</html>