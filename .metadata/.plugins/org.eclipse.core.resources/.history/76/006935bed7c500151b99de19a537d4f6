package withMain;

public class AddSpaces
{
	public static void addSpaces(StringBuilder str)
	{
		String mark = ".,?!:;";
		for(int i=0; i<str.length(); i++)
		{
			char ch = str.charAt(i);
			if(ch!=' ' && mark.indexOf(ch) ==-1)
			{
				str.append(" ");
			}
		}
	}
	public static void main(String[] args)
	{
		StringBuilder str = new StringBuilder("Исходная.строка, куда нужно,добавить пробелы!");
		addSpaces(str);
		System.out.println(str);
	}

}
