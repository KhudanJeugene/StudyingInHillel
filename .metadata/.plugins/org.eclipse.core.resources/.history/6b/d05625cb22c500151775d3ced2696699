package withMain;

public class Change3Symb
{
	public static void changeSymb(String[] s, int l)
	{
		for (String word: s)
		{
			if (word.length()==l)
			{
				StringBuffer str = new StringBuffer(word);
				str.replace(str.length()-3, "$$$");
			}
		}
	}
	public static void main(String[] args)
	{
		int lenght = 4;
		String[] s ={ "Пока", "ты", "не", "спишь", "ты", "можешь", "идти"};
		changeSymb(s,lenght);


	}

}
