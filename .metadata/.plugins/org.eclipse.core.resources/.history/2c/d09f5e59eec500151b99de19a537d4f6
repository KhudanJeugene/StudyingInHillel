import static org.junit.Assert.*;

import org.junit.Test;

public class ChangeSymbTest
{

	@Test (expected = IllegalArgumentException.class)
	public void testChangeSymb_null()
	{
		String []str = null;
		int l = 4;
		HW9_3.changeSymb(str,l);
	}
	@Test
	public void testFindShor_0()
	{
		String []str = {};		
		int l = 4;
		HW9_3.changeSymb(str,l);
		String[]res = {};
		assertArrayEquals(str,res);
	}
	@Test
	public void testFindShor_1()
	{
		String []str = {"Many"};		
		int l = 4;
		HW9_3.changeSymb(str,l);
		String[]res = {"M$"};
		assertArrayEquals(str,res);
	}
	@Test
	public void testFindShor_2()
	{
		String []str = {"Many", "symb"};		
		int l = 4;
		HW9_3.changeSymb(str,l);
		String[]res = {"M$", "s$"};
		assertArrayEquals(str,res);
	}
	@Test
	public void testFindShor_many()
	{
		String str = "Something like this";
		int res =HW9_3.changeSymb(str);
		assertEquals(res,4);
	}
}
