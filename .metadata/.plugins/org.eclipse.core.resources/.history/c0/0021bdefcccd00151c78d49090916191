<html>
	<head>
		<title>add two Number</title>
		<script>
		function add() {
			var a = parseInt(document.getElementById('a').value);
			var s = document.getElementByld('s').value;
			var b = parseInt(document.getElementById('b').value);
			var c = 0;
			switch(s)
			{
			case '+' c = a+b;
			case '-' c = a-b;
			case '*' c = a*b;
			case '/' c = a/b;
			}
			document.getElementById('res').value = c;
		}
		</script>
	</head>
	<body>
		<form>
			<input id="a" type="text"><p>
			<input id="s" type="text"><p>
			<input id="b" type="text"><p>
			<input id="res" type="text"><p>
			<input type="button" value="Calculate" onclick="add();"><br>
		</form>
	</body>
</html>