package withMain;

public class AddSpaces
{
	public static StringBuilder addSpaces(StringBuilder str)
	{
		String mark = ".,?!:;";
		for(int i=0; i<str.length(); i++)
		{
			char ch = str.charAt(i);
			boolean flag = false;
			if (mark.indexOf(ch)!=-1)
			{
				flag = true;
			}
			else 
			{
				if(ch!=' ' && flag)
				{
					str.append(' ');			
				}
				flag = false;
			}
		}
		return str;
	}
	public static void main(String[] args)
	{
		StringBuilder str = new StringBuilder("Исходная.строка, куда нужно,добавить пробелы!");
		str = addSpaces(str);
		System.out.println(str);
	}

}
