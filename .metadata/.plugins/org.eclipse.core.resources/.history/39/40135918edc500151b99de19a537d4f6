public class HW9_3
{
	public static int findShort(String s)
	{
		if (s==null)
			throw new IllegalArgumentException();
		
		String [] arrs = s.split("[\\s.,?!—]+");
		int minword = arrs[0].length();
		for (String word: arrs)
		{
			if(minword>word.length())
				minword = word.length();
		}
		return minword;
	}
	
	
}
